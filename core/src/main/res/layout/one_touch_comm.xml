<?xml version="1.0" encoding="utf-8"?>

<com.afollestad.materialdialogs.internal.MDRootLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@drawable/dialog_shape_bg"
    android:orientation="vertical"
    app:md_reduce_padding_no_title_no_buttons="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <include layout="@layout/md_stub_titleframe" />

        <com.afollestad.materialdialogs.util.CenterTextView
            android:id="@+id/md_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:textColor="#000"
            android:textSize="@dimen/md_content_textsize" />



        <RelativeLayout
            android:id="@+id/id_ed_ly"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            >

            <EditText
                android:id="@+id/id_ed_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="输入作品名称"
                android:lines="1"
                android:textColor="#000"
                android:textSize="12sp" />

        </RelativeLayout>



        <ProgressBar
            android:id="@+id/md_progress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp" />


        <include layout="@layout/one_touch_layout" />

    </LinearLayout>


</com.afollestad.materialdialogs.internal.MDRootLayout>

